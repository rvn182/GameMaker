@model IEnumerable<PlayerSelector.Models.Game>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Druzyny
        </th>
        <th>
            Wynik
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfPlayers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CanSignUp)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Teams.ElementAt(0).Name - @item.Teams.ElementAt(1).Name
        </td>
        <td>
            @item.Teams.ElementAt(0).Goals - @item.Teams.ElementAt(1).Goals
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfPlayers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfPlayers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CanSignUp)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            @Html.ActionLink("See Teams", "SeeTeams", new { id = item.Id })
        </td>
    </tr>
}

</table>
